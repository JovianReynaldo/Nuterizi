<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
	<androidx.appcompat.widget.Toolbar
		android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
		android:background="@color/colorPrimary"
		app:titleTextColor="@android:color/white"
		android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/layout_lg"
        android:gravity="center">    
        <TextView
		    android:id="@+id/tvNamaMakanan"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/NamaMakanan"
		    android:textSize="@dimen/text_sz_extraLarge"
		    android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            />
        <TextView
		    android:id="@+id/tvSajian"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/Sajian"
		    android:textSize="@dimen/text_sz_medium"
		    android:textColor="@android:color/black"
            android:paddingTop="@dimen/layout_sm"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_xl">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kalori"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/layout_xl"/>
            <TextView
                android:id="@+id/tvKalori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Kalori"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_marginEnd="@dimen/layout_xl"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_md">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/karbohidrat"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/layout_xl"/>
            <TextView
                android:id="@+id/tvKarbohidrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gram"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_marginEnd="@dimen/layout_xl"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_md">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protein"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/layout_xl"/>
            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gram"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_marginEnd="@dimen/layout_xl"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/layout_md">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lemak"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/layout_xl"/>
            <TextView
                android:id="@+id/tvLemak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/gram"
                android:textSize="@dimen/text_sz_large"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_marginEnd="@dimen/layout_xl"/>
         </LinearLayout>
	    <Button
            android:id="@+id/btnKembali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_xxl"
            android:layout_marginEnd="@dimen/layout_xxl"
            android:layout_marginTop="@dimen/layout_xxl"
            android:text="@string/Kembali"/>
    </LinearLayout>
</LinearLayout>
