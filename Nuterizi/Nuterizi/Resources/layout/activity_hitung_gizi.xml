<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingTop="@dimen/layout_lg"
        android:paddingBottom="@dimen/layout_lg">
        <TextView
            android:id="@+id/tvHitung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Hitung"
            android:textSize="24dp"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:paddingBottom="@dimen/layout_md"/>
        <LinearLayout
            android.id = "@+id/llJenisKelaminRadio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/layout_xs">
            <TextView
                android:id="@+id/tvJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/JenisKelamin"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <RadioGroup
                android:id = "@+id/rgJenisKelamin"
                android:layout_width="wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                    <RadioButton
                        android:id = "@+id/rbLaki"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "@string/Laki"
                        android:textSize="@dimen/text_sz_medium"
                        android:padding="@dimen/layout_sm"/>
                    <RadioButton
                        android:id = "@+id/rbPerempuan"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "@string/Perempuan"
                        android:textSize="@dimen/text_sz_medium"
                        android:padding="@dimen/layout_sm"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llUmur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_xxl"
            android:layout_marginEnd="@dimen/layout_xxl"
            android:padding="@dimen/layout_xs"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUmur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Umur"
                android:textSize="@dimen/text_sz_medium"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etUmur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/Tahun"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llTinggi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_xxl"
            android:layout_marginEnd="@dimen/layout_xxl"
            android:padding="@dimen/layout_xs"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Tinggi"
                android:textSize="@dimen/text_sz_medium"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etTinggi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/Cm"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llBerat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_xxl"
            android:layout_marginEnd="@dimen/layout_xxl"
            android:padding="@dimen/layout_xs"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Berat"
                android:textSize="@dimen/text_sz_medium"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <EditText
                android:id="@+id/etBerat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textAlignment="center"
                android:hint="@string/Kg"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llFrekuensiAktivitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_xxl"
            android:layout_marginEnd="@dimen/layout_xxl"
            android:padding="@dimen/layout_xs"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvvFrekuensiAktivitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Aktivitas"
                android:textSize="@dimen/text_sz_medium"
                android:textColor="@android:color/black"
                android:textAlignment="center"/>
            <Spinner
                android:id="@+id/spFrekuensiAktivitas"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_xl"
                android:prompt="@string/Akt"/>
        </LinearLayout>
        <LinearLayout
            android.id = "@+id/llHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="@dimen/layout_xs"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvHasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Hasil"
                android:textSize="16dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="0dp"/>
            <TextView
                android:id="@+id/tvHasilKkal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Kalori"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_marginBottom="0dp"/>
        </LinearLayout>
        <LinearLayout
            android.id = "@+id/llHasil"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_menu_sm"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/layout_xs"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/Detail"/>
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:text="@string/Simpan"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>