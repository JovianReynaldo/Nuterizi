<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_xxl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_xxl"
        android:orientation="vertical"
        android:background="@android:drawable/list_selector_background"
        android:backgroundTint="@color/lightBlue"
        android:paddingTop="@dimen/layout_sm">
        <TextView
            android:id="@+id/tvReminderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Makanan1"
            android:textSize="@dimen/text_sz_large"
            android:paddingStart="@dimen/layout_md"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tvReminderMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Makanan1"
            android:textSize="@dimen/text_sz_large"
            android:paddingStart="@dimen/layout_md"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Spinner
        android:id="@+id/spReminderAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/layout_sm"/>
    <Switch
        android:id="@+id/swReminderSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="YES"
        android:textOff="NO"
        android:layout_below="@id/spReminderAction"
        android:layout_alignParentEnd="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tooltip_corner_radius"
        android:background="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
