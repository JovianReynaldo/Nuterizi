<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_xxl"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@android:drawable/list_selector_background"
        android:backgroundTint="@color/lightBlue">
        <TextView
            android:id="@+id/tvNamaMakanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Makanan1"
            android:textSize="@dimen/text_sz_large"
            android:paddingStart="@dimen/layout_md"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/tooltip_corner_radius"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/layout_xs"/>
</LinearLayout>
