<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@android:color/white"
    android:minWidth="20px"
    android:minHeight="20px">
    <TextView
		android:id="@+id/tvKebutuhanHarian"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/KebHar"
		android:textSize="24dp"
		android:textColor="@android:color/black"
		android:textAlignment="center"/>
    <TextView
		android:id="@+id/tvKebKalori"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/Kal"
		android:textSize="16dp"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:textAlignment="center"/>
    <LinearLayout
        android.id = "@+id/llHasilHitungEnergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_xs"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvEnergi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvEnergiSatuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Kalori"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/layout_sm"/>
    </LinearLayout>
	<TextView
		android:id="@+id/tvKebKarbo"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/Kar"
		android:textSize="16dp"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:textAlignment="center"/>
    <LinearLayout
        android.id = "@+id/llHasilHitungKarbohidrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_xs"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvKarbohidrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvKarbohidratSatuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gram"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/layout_sm"/>
    </LinearLayout>
	<TextView
		android:id="@+id/tvKebProtein"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/Pro"
		android:textSize="16dp"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:textAlignment="center"/>
    <LinearLayout
        android.id = "@+id/llHasilHitungProtein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_xs"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvProtein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvProteinSatuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gram"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/layout_sm"/>
    </LinearLayout>
	<TextView
		android:id="@+id/tvKebLemak"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/Lem"
		android:textSize="16dp"
		android:textColor="@android:color/black"
		android:layout_marginTop="10dp"
		android:textAlignment="center"/>
    <LinearLayout
        android.id = "@+id/llHasilHitungLemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_xs"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvLemak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvLemakSatuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gram"
            android:textSize="@dimen/text_sz_large"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/layout_sm"/>
    </LinearLayout>
	<Button
        android:id="@+id/btnKembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        android:text="@string/Kembali"/>
</LinearLayout>
